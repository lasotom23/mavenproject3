public class Deportista extends Persona {
    public Deportista (){
        
    setNombre("");
    setApellido("");
    setProfesion("Deportista");
    setEdad(35);
    setPeso(150);
    setEstadocivil("Casado");
    }
    @Override
     public String getInfoPersona() {
       return "\n"+ "--Informacion Deportista--";
    }   
}
